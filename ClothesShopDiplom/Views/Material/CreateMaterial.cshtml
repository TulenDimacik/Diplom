@model ClothesShopDiplom.Models.Material
@{ ViewBag.Title = "Добавление материала"; }
<link rel="stylesheet" href="~/css/MyStyle.css" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-2">
            <h2 style="margin-top:10vh" class="heading-section">Добавление материала</h2>
        </div>
    </div>
</div>

<form asp-action="creatematerial" asp-controller="material">
    <div class="form-group">
        <label asp-for="MaterialName" class="control-label"></label>
        <input type="text" asp-for="MaterialName" required pattern=".*\S+.*" title="Поле обязательно для заполнения" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>