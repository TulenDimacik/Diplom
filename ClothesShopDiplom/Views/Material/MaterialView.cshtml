@model IEnumerable<ClothesShopDiplom.Models.Material>
@{ ViewBag.Title = "Материалы"; }
<a asp-action="CreateMaterial">Добавить материал</a>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Название</th>
            <th scope="col">Действия</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Id</td>
        <td>@item.MaterialName</td>
        <td>
            <form asp-controller="material" asp-action="Delete" method="post" asp-route-id="@item.Id">
                <input type="submit" value="Удалить" class="btn btn-outline-primary" />
            </form>
        </td>
    </tr>}
    </tbody>
</table>