@model ClothesShopDiplom.Models.User
@{ ViewBag.Title = "Регистрация"; }
<style>
    .group {
        position: relative;
        margin-bottom: 45px;
    }
    input:not(#no-style) {
        font-size: 18px;
        padding: 10px 10px 10px 5px;
        display: block;
        width: 300px;
        border: none;
        border-bottom: 1px solid #000000;
        background-color:transparent;
    }

        input:focus {
            outline: none;
        }

    /* LABEL ======================================= */
    label {
        color: #000000;
        font-size: 18px;
        font-weight: normal;
        position: absolute;
        pointer-events: none;
        left: 5px;
        top: 10px;
        transition: 0.2s ease all;
        -moz-transition: 0.2s ease all;
        -webkit-transition: 0.2s ease all;
    }

    /* active state */
    .group.has-value label,
    input:focus ~ label {
        top: -20px;
        font-size: 14px;
        color: #000000;
    }

    /* BOTTOM BARS ================================= */
    .bar {
        position: relative;
        display: block;
        width: 300px;

    }

        .bar:before,
        .bar:after {
            content: "";
            height: 2px;
            width: 0;
            bottom: 1px;
            position: absolute;
            background: #000000;
            transition: 0.2s ease all;
            -moz-transition: 0.2s ease all;
            -webkit-transition: 0.2s ease all;
        }

        .bar:before {
            left: 50%;
        }

        .bar:after {
            right: 50%;
        }

    /* active state */
    input:focus ~ .bar:before,
    input:focus ~ .bar:after {
        width: 50%;
    }

    /* HIGHLIGHTER ================================== */
    .highlight {
        position: absolute;
        height: 60%;
        width: 100px;
        top: 25%;
        left: 0;
        pointer-events: none;
        opacity: 0.5;
    }

    /* active state */
    input:focus ~ .highlight {
        -webkit-animation: inputHighlighter 0.3s ease;
        -moz-animation: inputHighlighter 0.3s ease;
        animation: inputHighlighter 0.3s ease;
    }
    .container {
        all: unset
        /* margin: 0 0 0 0;
        width:100vw;*/
    }
    .blur-image {
        filter: blur(10px);
    }
    footer{
        display:none
    }
  

    .button-28 {
        appearance: none;
        background-color: transparent;
        border: 2px solid #1A1A1A;
        border-radius: 15px;
        box-sizing: border-box;
        color: #000000;
        cursor: pointer;
        display: inline-block;
        font-weight: 600;
        line-height: normal;
        margin: 0;
        min-height: 60px;
        min-width: 0;
        outline: none;
       
        text-align: center;
        text-decoration: none;
        transition: all 300ms cubic-bezier(.23, 1, 0.32, 1);
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        width: 100%;
        will-change: transform;
    }

        .button-28:disabled {
            pointer-events: none;
        }

        .button-28:hover {
            color: #fff;
            background-color: #1A1A1A;
            box-shadow: rgba(0, 0, 0, 0.25) 0 8px 15px;
            transform: translateY(-2px);
        }

        .button-28:active {
            box-shadow: none;
            transform: translateY(0);
        }

</style>
<link rel="stylesheet" href="~/css/MyStyle.css" />
<div style="z-index:0" >
    <img src="~/Images/4471506800_5_1_1.gif" class="blur-image" style=" width:100vw; height:100vh; z-index:-1;position:absolute;" />
</div>
<div class="container">
    <div class="row m-0 p-0 justify-content-center">
        <div class=" mb-3 pl-0  ">
            <h2 style="margin-top:10vh" class="heading-section">Регистрация</h2>
        </div>
    </div>
</div>
<form class="row  m-0 p-0 justify-content-center" asp-action="create" asp-controller="User">
    <div class=" m-0 p-0" style=" background-color:rgba(255, 255, 255,0.1);">
        <div class="group">
            <input type="text" asp-for="Surname" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label>Фамилия</label>
            <span style="color:red; font-size:14px" asp-validation-for="Surname"></span>
        </div>

        <div class="group">
            <input type="text" asp-for="Name" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label>Имя</label>
            <span style="color:red; font-size:14px" asp-validation-for="Name"></span>
        </div>

        <div class="group">
            <input type="text" asp-for="Patronymic" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label>Отчество</label>
            <span style="color:red; font-size:14px" asp-validation-for="Patronymic"></span>
        </div>
        <div class="group">
            <input type="text" asp-for="Email" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label>Email</label>
            <span style="color:red; width: 300px; font-size:14px" asp-validation-for="Email"></span>
            <span style="color:red;width: 300px; font-size:14px">@ViewBag.EmailError</span>
            
        </div>

        <div class="group">
            <input type="text" asp-for="Login" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label>Логин</label>
            <span style="color:red;  font-size:14px; white-space:pre-line " asp-validation-for="Login"></span>
            <span style="color:red;width: 300px; font-size:14px">@ViewBag.LoginError</span>
        </div>

        <div class="group">
            <input type="password" asp-for="Password" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label>Пароль</label>
            <span style="color:red; font-size:14px; white-space:pre-line " asp-validation-for="Password"></span>
        </div>

        <div >
            <input type="submit" id="no-style" value="Регистрация" class="button-28" />
        </div>
    </div>

</form>
<script>
    const inputs = document.querySelectorAll('.group input');
    window.onload = function () {
        
        inputs.forEach(input => {
            if (input.value == "") {
                input.parentNode.classList.remove('has-value');
            } else {
                input.parentNode.classList.add('has-value');
            }
        });
        
    }
    
    inputs.forEach(input => {
        input.addEventListener('input', () => {
            if (input.value.trim() !== '') {
                input.parentNode.classList.add('has-value');
            } else {
                input.parentNode.classList.remove('has-value');
            }
        });
    });
   
 
</script>