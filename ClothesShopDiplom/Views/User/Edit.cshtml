@model ClothesShopDiplom.Models.User

<h2>Редактирование пользователя</h2>
<form asp-action="edit" asp-controller="user" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Surname" class="control-label"></label>
        <input placeholder="Иванов" asp- type="text" asp-for="Surname" class="form-control" />
        <span style="color:red" asp-validation-for="Surname"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input placeholder="Иван" type="text" asp-for="Name" class="form-control" />
        <span style="color:red" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patronymic" class="control-label"></label>
        <input type="text" asp-for="Patronymic" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input type="text" asp-for="Email" class="form-control" />
        <span style="color:red" asp-validation-for="Email"></span>
        <span style="color:red">@ViewBag.EmailError</span>
    </div>

    <div class="form-group">
        <label asp-for="Login" class="control-label"></label>
        <input type="text" asp-for="Login" class="form-control" />
        <span style="color:red" asp-validation-for="Login"></span>
        <span style="color:red">@ViewBag.LoginError</span>
    </div>

    <p>
        <input type="submit" value="Сохранить" />
    </p>
    <div hidden="hidden" class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>
</form>