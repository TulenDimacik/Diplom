@model IEnumerable<ClothesShopDiplom.Models.Product>
@{ ViewBag.Title = "Товары"; }
<a asp-action="ProductCreate" asp-controller="product">Добавить товар</a>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Название</th>
            <th scope="col">Цвет</th>
            <th scope="col">Цена</th>
            <th scope="col">Пол</th>
            <th scope="col">Описание</th>
            <th scope="col">Материал</th>
            <th scope="col">Вид</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.ProductName</td>
    <td>@item.ProductColor</td>
    <td>@item.Price</td>
    <td>
        @if (item.Gender == true)
        {<span>Мужской</span>}
        else
        {
<span>Женский</span>}
    </td>
    <td>@item.Description</td>
    <td>@Html.DisplayFor(modelItem => item.Material.MaterialName)</td>
    <td>@Html.DisplayFor(modelItem => item.ProductType.ProductTypeName)</td>
    <td>
        <a asp-action="ProductEdit" asp-controller="product" asp-route-id="@item.Id">Изменить</a>
        <form asp-controller="product" asp-action="Delete" method="post" asp-route-id="@item.Id"><input type="submit" value="Удалить" class="btn  btn-outline-danger" /></form>
    </td>
 
</tr>
}
        </tbody>
</table>