<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Авторизация</h2>
            </div>
        </div>
        <div class="row justify-content-center" >
            <div class="col-md-7 col-lg-5"style="box-shadow: 0px 0px 25px #1B1B1B;">
                <div class="wrap">
                    <div class="img" style="background-image: url(../Home/fb9ec1b6-4d00-4244-81f0-369b8b1eaa34.jpg);"></div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Вход в аккаунт</h3>
                            </div>

                        </div>
                        <form asp-controller="Home" class="signin-form">
                            <div class="form-group mt-3">
                                <label class="form-control-placeholder" asp-for="Login">Логин</label>
                                <input type="text" asp-for="Login" class="form-control" required="">

                            </div>
                            <div class="form-group">
                                <label class="form-control-placeholder" asp-for="Password">Пароль</label>
                                <input id="password-field" type="password" asp-for="Password" class="form-control" required="">
                                <span style="color:red">@ViewBag.AuthError</span>
                                <span toggle="#password-field" class="fa fa-fw field-icon toggle-password fa-eye"></span>
                            </div>
                            <div class="form-group">

                                <button type="submit" asp-action="Login" class="form-control btn btn-primary rounded submit px-3">Войти</button>
                            </div>
                            <div class="form-group d-flex justify-content-center text-center">

                                <div class="w-50 text-center d-flex justify-content-center">
                                    <a asp-controller="Home" asp-action="Recovery">Забыли пароль?</a>
                                </div>
                            </div>

                        </form>
                        <p class="text-center">Не зарегистрированы? <a asp-controller="User" asp-action="Create">Регистрация</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>