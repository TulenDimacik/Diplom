@{ ViewBag.Title = "Ввод кода"; }
<h1>Ввод кода</h1>
<form asp-action="ConfirmCode" asp-controller="Home">

    <div class="form-group">
        <label>Введите код</label>
        <input placeholder="Введите код" name="code" type="text" class="form-control" />
        <span style="color:red">@ViewBag.ConfirmError</span>
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>