@model ClothesShopDiplom.Models.Employee
@{ ViewBag.Title = "Добавление сотрудника"; }
<form asp-action="create" asp-controller="employee">

    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input placeholder="Иванов" asp- type="text" asp-for="Surname" class="form-control" />
        <span style="color:red" asp-validation-for="Surname"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input placeholder="Иван" type="text" asp-for="Name" class="form-control" />
        <span style="color:red" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patronymic" class="control-label">Отчество</label>
        <input placeholder="Иванович" type="text" asp-for="Patronymic" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Емаил</label>
        <input placeholder="example@mail.ru" type="text" asp-for="Email" class="form-control" />
        <span style="color:red" asp-validation-for="Email"></span>
        <span style="color:red">@ViewBag.EmailError</span>
    </div>

