@model ClothesShopDiplom.Models.Employee

@{ ViewBag.Title = "Авторизация"; }
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-title">
                АВТОРИЗАЦИЯ
            </div>
            <div class="col-lg-12 login-form">
                <form asp-controller="Home">

                    <div class="form-group">
                        <label class="form-control-label" asp-for="Login">ЛОГИН</label>
                        <input type="text" asp-for="Login" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" asp-for="Password">ПАРОЛЬ</label>
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                    <div class="col-lg-6 login-btm login-button">
                        <input type="submit" asp-action="Login" value="Войти" class="btn btn-outline-primary" />
                    </div>
                    <div class="col-lg-6 login-btm login-button">
                        <input type="submit" asp-controller="User" asp-action="Create" value="Зарегистрироваться" class="btn btn-outline-primary" />
                    </div>
                    @*<div class="form-group">
            <a class="btn btn-outline-primary" asp-action="Registration">Зарегистрироваться</a>
        </div>*@
                </form>
            </div>

            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>  